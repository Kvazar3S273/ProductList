@using AppProductList.Data.Entities
@model List<Product>
@foreach (var product in Model)
{
<tr>
    <td scope="row">@product.Id</td>
    <td>@product.Name</td>
    <td>@product.Price</td>
    <td>
        <div class="row">
            @foreach (var img in product.ProductImages)
            {
                <img src="/images/@img.Name" class="col-md-2" width="60" height="60" />
            }
        </div>
    </td>

    <td style="text-align:center">
        <a class="text-success" asp-controller="Home" 
           asp-action="Edit" 
           asp-route-id="@product.Id"><i class="fas fa-pencil-alt" aria-hidden="true"></i></a>
        <a class="text-danger " asp-controller="Home" 
           asp-action="Delete" 
           asp-route-id="@product.Id"><i class="fa fa-trash-alt" aria-hidden="true"></i></a>
    </td>
</tr>

}